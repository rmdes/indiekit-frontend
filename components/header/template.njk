{% from "../navigation/macro.njk" import navigation with context %}
<header class="{{ classes("header", opts) }}">
  <div class="header__container -!-container">
    <div class="header__title">
      <a class="u-url" href="{{ opts.url or "/" }}">
        <span class="p-name">{{ opts.name }}</span>
      </a>
    </div>
    <button class="header__hamburger" type="button" aria-label="Open menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>
</header>
